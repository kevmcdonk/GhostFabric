{{!< default}}
{{#post}}
<section class="BaseHeader-module_header">
    <div class="postBlogLogo ">
        <!-- BaseProfileCoreInfo-module_userImageWrapper BaseProfileCoreInfo-module_userImageWrapper -->
        <div class="BaseProfileCoreInfo-module_profileImageWrapper" role="">
            <a href="/">
                <div class="BaseProfileCoreInfo-module_image" style='background-image: url("{{@blog.logo}}");'>
                </div>
            </a>
        </div>
    </div>
    <div class="blogPostMainImage" style="background-image:linear-gradient(
    rgba(0, 0, 0, 0.5),
    rgba(0, 0, 0, 0.5)
),url('{{#if image}}{{image}}{{else}}https://res.delve.office.com/delve/versionless/urbanimg3_large.jpg{{/if}}');">
        {{#next_post}}
            <div>
              <a href="{{url}}" title="{{title}}">
                <i class="ms-Icon ms-Icon--ChevronLeftMed previousPostIcon ms-fontColor-neutralLighterAlt ms-fontSize-su" aria-hidden="true"></i>
              </a>
            </div>
        {{else}}
        {{/next_post}}

        {{#prev_post}}
            <div>
                <a href="{{url}}" title="{{title}}">
                    <i class="ms-Icon ms-Icon--ChevronRightMed nextPostIcon ms-fontColor-neutralLighterAlt ms-fontSize-su" aria-hidden="true"></i>
                </a>
            </div>
        {{else}}
        {{/prev_post}}

    </div>

      </section>
      <div class="ms-Grid"> 
        <div class="ms-Grid-row ms-slideUpIn10">
            <div class="ms-Grid-col ms-sm2 ms-md2 ms-lg2"></div>
          <div class="ms-Grid-col ms-sm12 ms-md12 ms-lg8">
<div class="blogPostPane-container">
    <div class="c-post-view {{post_class}}">
        <div class="postTitle ms-fontColor-neutralLighterAlt">
            <h1>
                {{title}}
            </h1>
            <h3 class="ms-fontColor-neutralLighterAlt">
            {{date format="MMMM DD, YYYY"}}
            </h3>
        </div>

        <div class="blogContent">
            {{content}}
        </div>

        <div class="c-post-view__footer">
            {{> "post-meta"}}
            <br/>
            {{> "post-share"}}
            <!--{{> "comments"}}-->
        </div>
    </div>
 </div>

{{/post}}